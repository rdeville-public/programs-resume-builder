[%- if "name" in basics and basics.name %]
\name{[[ basics.name ]]}
[%- endif %]
[%- if basics.position %]
\tagline{%
  \textit{
    \large [[ basics.position | wordwrap(78) | indent(2) ]]
[%-     if basics.company and basics.company.url %]
      at \href{[[ basics.company.url ]]}{[[ basics.company.name ]]}
[%-     elif basics.company %]
      at [[ basics.company.name ]]
[%-     endif%]
  }
}
[%- endif %]

[%- if basics.picture %]
% Make photo exactly match the header with margintop/marginright/marginbottom
% as margin
\photo[square]{[[ basics.picture.light ]]}{\dimexpr .75\headerheight}
[%- endif %]
